<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header', {title: 'Hackstagram'}); %>
</head>
<body>
    <%- include('partials/navbar'); %>

    <div class="container p-5 mx-auto">
        <div class="row">
            <div class="col-10">
                <form action="/home" method="get">
                    <div class="row">
                        <div class="col-10"> <input type="text" name="search" id="" placeholder="Search by title" class="form-control"> </div>
                        <div class="col"><button type="submit" class="btn btn-light w-100">Search</button> </div>
                    </div>
                </form>
                <div class="row mt-5">
                    <% post.forEach(pst=>{ %>
                        <div class="row mx-auto mb-3">
                            <div class="card w-75 mx-auto">
                                <div class="row ">
                                    <img src="<%= pst.imgUrl %>" alt="<%= pst.imgUrl %>">
                                </div>
                                <div class="row">
                                    <a href="/profile/<%= pst.User.username %>" class="link-primary"><%= pst.User.username %></a>
                                </div>
                                <div class="row">
                                    <b><%= pst.title %> </b>
                                </div>
                                <div class="row">
                                    <p> <%= pst.Tag.name %> </p>
                                </div>
                                <div class="row">
                                    <p>üìç <%= pst.location %> on <%= dateFormatter(pst.createdAt) %></p>
                                </div>

                            </div>
                        </div>
                    <% }) %> 
                </div>
            </div>
            <div class="col">
                <div class="row mb-3">
                    <a href="/profile/<%= username %>"><button class="btn btn-primary w-100">My Profile</button></a>
                </div>
                <div class="row">
                    <a href="/addPost/"><button class="btn btn-primary w-100">Add Post</button></a>
                </div>
                <div class="row">
                    <a href="/logout"><button class="btn btn-outline-primary w-100 mt-3">Logout</button></a>
                </div>
            </div>
        </div>
       
    </div>

   
       
    </div>

</body>
</html>